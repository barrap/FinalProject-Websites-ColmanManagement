<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Customers Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.rtl.min.css"
        integrity="sha384-+4j30LffJ4tgIMrq9CwHvn0NjEvmuDCOfk6Rpg2xg7zgOxWWtLtozDEEVvBPgHqE" crossorigin="anonymous">
    <link rel="icon" type="image/x-icon" href="img/Blockbuster_logo.svg.png">
    <link rel="stylesheet" href="css/customers.css">
    <link rel="stylesheet" href="css/sidenav.css">
</head>

<body>
    <header id="sidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn">&times;</a>
        <a href="/main">Home page</a>
        <a href="/movies">Movies</a>
        <a href="/tvshows">TV Shows</a>
        <a href="#">Clients</a>
        <a href="/locations">Locations</a>
        <a href="/admin-stats">Statistics</a>
        <a href="/allOrders">Customers Orders</a>
        <a href="/userOrders">Your Orders</a>
        <a href="/logout">Logout</a>
    </header>
    <div id="main">
        <div class="container-fluid">
            <div class="row">
                <nav class="navbar bg-dark">
                    <div class="container-fluid">
                        <span style="font-size:30px;cursor:pointer;color:white" id="sidenavBtn">&#9776;</span>
                        <div class="dropdown">
                            <button type="submit" class="btn btn-primary dropbtn">Hello,
                                <%=customers.username%>
                            </button>
                            <div id="myDropdown" class="dropdown-content">
                                <a href="/logout" onclick="clearCart()">Logout</a>
                                <a href="/updaeUserPage">Update Details</a>
                                <a href="/updatePayment">Update Payment Details</a>
                            </div>
                        </div>
                    </div>
                </nav>
                <div class="container text-center g-3">
                    <div class="row g-3 results">
                        <table>
                            <tr>
                                <th>No.</th>
                                <th>Full Name</th>
                                <th>Username</th>
                                <th>Is Admin?</th>
                                <th>Phone Number</th>
                                <th>Location</th>
                                <th>Number of orders</th>
                                <th>Delete user?</th>
                                <th>Change admin status</th>
                            </tr>
                            <% for (var i=0; i < customers.length; i++) { %>
                                <tr>
                                    <td>
                                        <%=(i + 1)%>
                                    </td>
                                    <td>
                                        <%=customers[i].fullname%>
                                    </td>
                                    <td id="username_<%=i+1%>">
                                        <%=customers[i]._id%>
                                    </td>
                                    <td class="isAdmin" data-admin="<%=customers[i].isAdmin%>">
                                        <%=(customers[i].isAdmin==true) ? 'True' : 'False' %>
                                    </td>
                                    <td>
                                        <%=customers[i].phone%>
                                    </td>
                                    <td>
                                        <%=customers[i].location%>
                                    </td>
                                    <td>
                                        <%=customers[i].orders%>
                                    </td>
                                    <td>
                                        <form action="/deleteCustomer" method="POST">
                                            <input readonly class="d-none" name="username"
                                                value="<%=customers.username%>">
                                            <button type="submit" class="btn btn-outline-danger"><svg
                                                    xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                    fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                                    <path
                                                        d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z" />
                                                </svg></button>
                                        </form>
                                    </td>
                                    <td id="admin_status_<%=i+1%>">

                                    </td>
                                </tr>
                                <%}%>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <footer>
            <nav class="navbar">
                <div class="container-fluid">
                    <span>
                        <a class="navbar-brand" href="/main">Home Page</a>
                        <a class="navbar-brand" href="/locations">Location</a>
                        <a class="navbar-brand" href="/about">About Us</a>
                    </span>
                </div>
            </nav>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>



    <script src="https://code.jquery.com/jquery-3.6.1.min.js"
        integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>

    <script src="js/main.js"></script>
    <script src="js/sidenav.js"></script>
    <script src="js/customers.js"></script>
    <script src="js/connect.js"></script>
    <script src="js/cart.js"></script>

</body>

</html>