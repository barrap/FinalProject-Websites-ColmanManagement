<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Update User Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.rtl.min.css"
        integrity="sha384-+4j30LffJ4tgIMrq9CwHvn0NjEvmuDCOfk6Rpg2xg7zgOxWWtLtozDEEVvBPgHqE" crossorigin="anonymous">
    <link rel="icon" type="image/x-icon" href="img/Blockbuster_logo.svg.png">
    <link rel="stylesheet" href="css/main_style.css">
    <link rel="stylesheet" href="css/add_style.css">
</head>

<body>
    <header id="sidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="/main">Home page</a>
        <a href="/movies">Movies</a>
        <a href="/tvshows">TV Shows</a>
        <a href="/customers">Clients</a>
        <a href="/locations">Locations</a>
        <a href="/admin-stats">Statistics</a>
        <a href="/allOrders">Customers Orders</a>
        <a href="/userOrders">Your Orders</a>
        <a href="/logout">Logout</a>
    </header>
    <div id="main">
        <div class="container-fluid">
            <div class="row">
                <nav class="navbar bg-dark">
                    <div class="container-fluid">
                        <span id="sidenavBtn" onclick="openNav()">&#9776;</span>
                        <h5 class="text-white" id="headline">Fill the fields you want to update</h5>
                        <div class="dropdown">
                            <button type="submit" class="btn btn-primary dropbtn">Hello,
                                <%=dict.username%>
                            </button>
                            <div id="myDropdown" class="dropdown-content">
                                <a href="/logout" onclick="clearCart()">Logout</a>
                                <a href="/updaeUser">Update Details</a>
                                <a href="/updatePayment">Update Payment Details</a>
                            </div>
                        </div>
                    </div>
                </nav>
                <div class="col g-3">
                    <div class="container text-center g-3">
                        <form action="/updateUser" method="post" onsubmit="return validateBeforeSubmit()">
                            <div class="mb-3 row text-center div_input">
                                <label class="col-sm-2 col-form-label">Phone</label>
                                <div class="col-sm-10 input_text">
                                    <input type="text" class="form-control" name="phone" id="phone">
                                </div>
                                <span id="phone_message"></span>
                            </div>
                            <div class="mb-3 row text-center div_input">
                                <label class="col-sm-2 col-form-label">City:</label>
                                <div class="col-sm-10 div_choice_input">
                                    <select name="location" id="location">
                                        <option value="Tel-Aviv">Tel-Aviv</option>
                                        <option value="Jerusalem">Jerusalem</option>
                                        <option value="Haifa">Haifa</option>
                                        <option value="Eilat">Eilat</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3 row div_input row text-center">
                                <label class="col-sm-2 col-form-label">Password</label>
                                <div class="col-sm-10 input_text">
                                    <input type="password" class="form-control" name="password" id="password">
                                </div>
                                <span id="password_message" class="float-start"></span>
                            </div>
                            <div class="mb-3 row div_input row text-center">
                                <label class="col-sm-2 col-form-label">Password Conformation</label>
                                <div class="col-sm-10 input_text">
                                    <input type="password" class="form-control" name="password_conf" id="password_conf">
                                </div>
                            </div>
                            <label>Show Password</label>
                            <input type="checkbox" id="showpass" onclick="showPass()">
                            <br>
                            <br>
                            <button class="btn btn-primary" type="submit" id="submitBtn">Update</button>
                        </form>
                        <br>
                        <br>
                        <div id="message">
                            <%=dict.message%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer>
            <nav class="navbar">
                <div class="container-fluid">
                    <span>
                        <a class="navbar-brand" href="/main">Home Page</a>
                        <a class="navbar-brand" href="/locations">Locations</a>
                        <a class="navbar-brand" href="/about">About Us</a>
                    </span>
                </div>
            </nav>
        </footer>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>



    <script src="https://code.jquery.com/jquery-3.6.1.min.js"
        integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>

    <script src="js/updateUser.js"></script>
    <script src="js/sidenav.js"></script>
    <script src="js/connect.js"></script>
    <script src="js/cart.js"></script>

</body>

</html>