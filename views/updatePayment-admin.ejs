<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Update Payment Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.rtl.min.css"
        integrity="sha384-+4j30LffJ4tgIMrq9CwHvn0NjEvmuDCOfk6Rpg2xg7zgOxWWtLtozDEEVvBPgHqE" crossorigin="anonymous">
    <link rel="icon" type="image/x-icon" href="img/Blockbuster_logo.svg.png">
    <link rel="stylesheet" href="css/main_style.css">
    <link rel="stylesheet" href="css/add_style.css">
</head>

<body>
    <header id="sidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="/main">Home page</a>
        <a href="/movies">Movies</a>
        <a href="/tvshows">TV Shows</a>
        <a href="/customers">Clients</a>
        <a href="/locations">Locations</a>
        <a href="/admin-stats">Statistics</a>
        <a href="/allOrders">Customers Orders</a>
        <a href="/userOrders">Your Orders</a>
        <a href="/logout">Logout</a>
    </header>
    <div id="main">
        <div class="container-fluid">
            <div class="row">
                <nav class="navbar bg-dark">
                    <div class="container-fluid">
                        <span id="sidenavBtn" onclick="openNav()">&#9776;</span>
                        <h5 class="text-white" id="headline">Fill the fields you want to update</h5>
                        <div class="dropdown">
                            <button type="submit" class="btn btn-primary dropbtn">Hello,
                                <%=dict.username%>
                            </button>
                            <div id="myDropdown" class="dropdown-content">
                                <a href="/logout" onclick="clearCart()">Logout</a>
                                <a href="/updaeUser">Update Details</a>
                                <a href="/updatePayment">Update Payment Details</a>
                            </div>
                        </div>
                    </div>
                </nav>
                <div class="col g-3">
                    <div class="container text-center g-3">
                        <%for(i=0; i < dict.cards.length;i++) {%>
                            <form action="/deleteCard" method="POST" class="float-end">
                                <p>****<%=dict.cards[i]._id.slice(-4)%></p>
                                <input readonly class="d-none" name="card_id"
                                    value="<%=dict.cards[i]._id%>">
                                <button type="submit" class="btn btn-outline-danger"><svg
                                        xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                        fill="currentColor" class="bi bi-trash3-fill"
                                        viewBox="0 0 16 16">
                                        <path
                                            d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z" />
                                    </svg></button>
                            </form>
                        <%}%>
                        <br>
                        <br>
                        <h4>Add a new card</h4>
                        <form action="/addCard" method="post" onsubmit="return validateBeforeSubmit()">
                            <div class="mb-3 row text-center div_input">
                                <label class="col-sm-2 col-form-label">Card Number</label>
                                <div class="col-sm-10 input_text">
                                    <input type="text" class="form-control" name="cardNumber" id="cardNumber" required>
                                </div>
                                <span id="cardNumber_message"></span>
                            </div>
                            <div class="mb-3 row text-center div_input">
                                <label class="col-sm-2 col-form-label">Full Name</label>
                                <div class="col-sm-10 input_text">
                                    <input type="text" class="form-control" name="fullname" id="fullname" required>
                                </div>
                                <span id="fullname_message"></span>
                            </div>
                            <div class="mb-3 row text-center div_input">
                                <label class="col-sm-2 col-form-label">Card holder ID</label>
                                <div class="col-sm-10 input_text">
                                    <input type="text" class="form-control" name="id" id="id" required>
                                </div>
                                <span id="id_message"></span>
                            </div>
                            <div class="mb-3 row text-center div_input">
                                <label class="col-sm-2 col-form-label">Expiration Date(MM/YY)</label>
                                <div class="col-sm-10 input_text">
                                    <input type="month" id="date" name="date" min="2018-03" value="2018-05" required>
                                </div>
                                <span id="date_message"></span>
                            </div>

                            <div class="mb-3 row text-center div_input">
                                <label class="col-sm-2 col-form-label">Security number</label>
                                <div class="col-sm-10 input_text">
                                    <input type="text" class="form-control" name="secNum" id="secNum" required >
                                </div>
                                <span id="secNum_message"></span>
                            </div>
                            <br>
                            <br>
                            <button class="btn btn-primary" type="submit" id="submitBtn">Add card</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <footer>
            <nav class="navbar">
                <div class="container-fluid">
                    <span>
                        <a class="navbar-brand" href="/main">Home Page</a>
                        <a class="navbar-brand" href="/locations">Locations</a>
                        <a class="navbar-brand" href="/about">About Us</a>
                    </span>
                </div>
            </nav>
        </footer>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>



    <script src="https://code.jquery.com/jquery-3.6.1.min.js"
        integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>

    <script src="js/credit_card.js"></script>
    <script src="js/sidenav.js"></script>
    <script src="js/connect.js"></script>
    <script src="js/cart.js"></script>

</body>

</html>