<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Movie Catalog - Search</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.rtl.min.css"
        integrity="sha384-+4j30LffJ4tgIMrq9CwHvn0NjEvmuDCOfk6Rpg2xg7zgOxWWtLtozDEEVvBPgHqE" crossorigin="anonymous">
    <link rel="icon" type="image/x-icon" href="img/Blockbuster_logo.svg.png">
    <link rel="stylesheet" href="css/search_style.css">
    <link rel="stylesheet" href="css/sidenav.css">
</head>

<body>
    <div id="sidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="/movies">Home page</a>
        <a href="/movies">Movies</a>
        <a href="/customers">Clients</a>
        <a href="/locations">Locations</a>
        <a href="/logout">Logout</a>
    </div>
    <div id="main">
        <div class="container-fluid">
            <div class="row">
                <nav class="navbar bg-dark">
                    <div class="container-fluid">
                        <span id="sidenavBtn" onclick="openNav()">&#9776;</span>
                        <form class="d-flex mx-auto" role="search">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" placeholder="Search" id="inp_search">
                                <span class="input-group-text" id="basic-addon1"><select id="search_parameters">
                                        <option value="title">By Title</option>
                                        <option value="director">By Director</option>
                                        <option value="year">By year</option>
                                        <option value="length">By Movie Length</option>
                                        <option value="cost">By Movie Cost</option>
                                    </select>
                            </div>
                        </form>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                            data-bs-target="#cartModal">
                            Cart <span id="cart_counter"></span>
                        </button>
                        <div class="dropdown">
                            <button type="submit" class="btn btn-primary dropbtn">Hello,
                                <%=username.username%>
                            </button>
                            <div id="myDropdown" class="dropdown-content">
                                <a href="/logout">Logout</a>
                                <a href="/updaeUserPage">Update Details</a>
                            </div>
                        </div>
                    </div>


                    <!-- cart Modal -->
                    <form action="/addOrder" method="post">
                        <div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                            aria-hidden="true">
                            <div class="modal-dialog modal-xl">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Cart</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-floating">
                                            <input readonly class="d-none" name="username"
                                                value="<%{username.username}%>">
                                        </div>
                                        <table class="show-cart table">

                                        </table>
                                        <div>Total price: $<span class="total-cart"></span></div>
                                        <input readonly class="d-none" name="total_price" id="total_price">
                                        <input readonly class="d-none" name="all_titles" id="all_titles">
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-danger" id="clear_cart">Clear
                                            Cart</button>
                                        <button type="submit" class="btn btn-primary" id="order">Order Now</button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- cart Modal End -->

                </nav>

                <div class="container text-center g-3">
                    <div class="row g-3 results">
                    </div>
                </div>
            </div>
        </div>
        <footer>
            <nav class="navbar">
                <div class="container-fluid">
                    <span>
                        <a class="navbar-brand" href="/locations">Location</a>
                        <a class="navbar-brand" href="#">#</a>
                        <a class="navbar-brand" href="#">#</a>
                        <a class="navbar-brand" href="#"> # # # </a>
                    </span>
                </div>
            </nav>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.6.1.min.js"
        integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
    <script src="js/search.js"></script>
    <script type="text/html" id="search_template">
        <div class="col-md-3 col-4">
            <div class="card">
                <div class="card-body">
                    <iframe src="{trailer}" height="230">
                    </iframe>
                    <h5 class="card-title">
                        {_id}
                    </h5>
                    <p class="card-text"><b>Synopsis: </b>
                        {preview}
                    </p>
                    <p><b>Director: </b>
                        {director}
                    </p>
                    <p><b>Publish Year: </b>
                        {year}
                    </p>
                    <p><b>Movie Length: </b>
                        {length} Minutes
                    </p>
                    <p><b>Main Actors: </b>
                        {main_actors}
                    </p>
                    <p><b>Genere: </b>
                        {type}
                    </p>
                    <p><b>Cost: </b>
                        {price}$
                    </p>
                    <button type="submit" class="btn btn-outline-success add-to-cart"
                                            data-name="{_id}" data-price="{price}"><svg
                                                xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                                                <path
                                                    d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                                            </svg> Add to cart</a>
                </div>
            </div>
        </div>
    </script>

    <script src="js/sidenav.js"></script>
    <script src="js/main.js"></script>
    <script src="js/cart.js"></script>
</body>

</html>